<html>
    <head>
        <title>Tasks Application</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" >
    </head>
    <body>
        <!-- Menu -->
        <a href="/"> Home </a>
        <a href="/tasks"> Tasks </a>
        <a href="/createTask"> Create Task </a>

        <table class="table">
            <tr>
                <th>ID</th>
                <th>Text</th>
                <th></th>
            </tr>
            {{#each tasks}}
            <tr>
                <td><a href="/tasks/{{id}}"> {{id}} </a></td>
                <td>{{text}}</td>
                <th>
                    <form method="POST" action="/tasks/{{id}}/delete">
                        <input type="submit" value="Delete"/>
                    </form>
                </th>
            </tr>
        {{/each}}

        </table>



        <a href="https://www.isel.pt"> ISEL </a>
    </body>
</html>